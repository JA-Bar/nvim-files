{
    "requirements": {
        "required": [
            "curl",
            "git",
            "go",
            "pip3",
            "npm"
        ],
        "optional": [
            ["fd-find", "fd", "fdfind"],
            "rg"
        ]
    },

    "installables": {
        "jedi_language_server": {
            "cmd": ["jedi-language-server"],
            "install_info": {
                "method": "pip",
                "name": "jedi-language-server"
            }
        },
        "pyright": {
            "cmd": ["pyright-langserver", "--stdio"],
            "install_info": {
                "method": "npm",
                "name": "pyright"
            }
        },
        "dockerls": {
            "cmd": ["docker-langserver", "--stdio"],
            "install_info": {
                "method": "npm",
                "name": "dockerfile-language-server-nodejs"
            }
        },
        "jsonls": {
            "cmd": ["vscode-json-language-server", "--stdio"],
            "install_info": {
                "method": "npm",
                "name": "vscode-langservers-extracted"
            }
        },
        "sumneko_lua": {
            "cmd": [
                {
                    "with_params": "extension/server/bin/{os_param}/lua-language-server",
                    "os_param": {
                        "windows": "Windows",
                        "linux": "Linux",
                        "mac": "macOS"
                    }
                },
                "-E",
                "extension/server/main.lua"
            ],
            "install_info": {
                "method": "github_releases",
                "name": "sumneko/vscode-lua/lua-"
            }
        },
        "flake8": {
            "cmd": ["flake8"],
            "install_info": {
                "method": "pip",
                "name": "flake8"
            }
        },
        "mypy": {
            "cmd": ["mypy"],
            "install_info": {
                "method": "pip",
                "name": "mypy"
            }
        },
        "pylint": {
            "cmd": ["pylint"],
            "install_info": {
                "method": "pip",
                "name": "pylint"
            }
        },
        "black": {
            "cmd": ["black"],
            "install_info": {
                "method": "pip",
                "name": "black"
            }
        },
        "isort": {
            "cmd": ["isort"],
            "install_info": {
                "method": "pip",
                "name": "isort"
            }
        },
        "stylua": {
            "cmd": ["stylua"],
            "install_info": {
                "method": "github_releases",
                "name": {
                    "with_params": "JohnnyMorganz/StyLua/{os_param}",
                    "os_param": {
                        "windows": "win64",
                        "linux": "linux",
                        "mac": "macos"
                    }
                }
            }
        }
    },

    "paths": {
        "base": {
            "installables": {
                "with_params": "{os_param}/installables",
                "os_param": {
                    "windows": "{$HOME}/AppData/Local/nvim-data",
                    "linux": "{$HOME}/.local/share/nvim",
                    "mac": "{$HOME}/.local/share/nvim"
                }
            },
            "go": "go",
            "pip": "python",
            "npm": "npm",
            "github_repo": "github_repo",
            "github_releases": "github_releases"
        },
        "bins": {
            "go": "go/bin",
            "pip": "python/bin",
            "npm": "npm/node_modules/.bin",
            "github_repo": "github_repo",
            "github_releases": "github_releases"
        }
    }
}
