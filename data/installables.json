{
    "requirements": {
        "required": [
            "curl",
            "git",
            "go",
            "pip3",
            "npm"
        ],
        "optional": [
            ["fd-find", "fd", "fdfind"],
            "rg"
        ]
    },

    "installables": {
        "jedi_language_server": {
            "cmd": ["jedi-language-server"],
            "install_info": {
                "method": "pip",
                "name": "jedi-language-server"
            }
        },
        "pyright": {
            "cmd": ["pyright-langserver", "--stdio"],
            "install_info": {
                "method": "npm",
                "name": "pyright"
            }
        },
        "dockerls": {
            "cmd": ["docker-langserver", "--stdio"],
            "install_info": {
                "method": "npm",
                "name": "dockerfile-language-server-nodejs"
            }
        },
        "jsonls": {
            "cmd": ["vscode-json-language-server"],
            "install_info": {
                "method": "npm",
                "name": "vscode-langservers-extracted"
            }
        },
        "sumneko_lua": {
            "cmd": [
                {
                    "with_params": "extensions/server/bin/{os_param}/lua-language-server",
                    "os_param": {
                        "windows": "win64",
                        "linux": "linux",
                        "mac": "macos"
                    }
                },
                "-E",
                "extensions/server/main.lua"
            ],
            "install_info": {
                "method": "github_releases",
                "name": "JohnnyMorganz/StyLua/lua-*"
            }
        },
        "flake8": {
            "cmd": ["flake8"],
            "install_info": {
                "method": "pip",
                "name": "flake8"
            }
        },
        "mypy": {
            "cmd": ["mypy"],
            "install_info": {
                "method": "pip",
                "name": "mypy"
            }
        },
        "pylint": {
            "cmd": ["pylint"],
            "install_info": {
                "method": "pip",
                "name": "pylint"
            }
        },
        "black": {
            "cmd": ["black"],
            "install_info": {
                "method": "pip",
                "name": "black"
            }
        },
        "isort": {
            "cmd": ["isort"],
            "install_info": {
                "method": "pip",
                "name": "isort"
            }
        },
        "stylua": {
            "cmd": ["stylua"],
            "install_info": {
                "method": "github_releases",
                "name": {
                    "with_params": "JohnnyMorganz/StyLua/{os_param}",
                    "os_param": {
                        "windows": "*win64*",
                        "linux": "*linux*",
                        "mac": "*macos*"
                    }
                }
            }
        }
    },

    "paths": {
        "base": {
            "installables": "data/installables/"
        },
        "install_methods": {
            "go": "go",
            "pip": "python",
            "npm": "npm",
            "github_repo": "github_repo",
            "github_releases": "github_releases"
        }
    }
}
