{
    "requirements": {
        "required": [
            "curl",
            "git",
            "go",
            "pip3",
            "python3",
            "npm"
        ],
        "optional": [
            ["fd-find", "fd", "fdfind"],
            "rg"
        ]
    },

    "installables": {
        "pynvim": {
            "notes": "Neovim dependency.",
            "cmd": ["python ", "-m", "pynvim"],
            "install_info": {
                "method": "pip",
                "name": "pynvim"
            }
        },
        "jupyter_client": {
            "notes": "magma-nvim dependency.",
            "cmd": ["python ", "-m", "jupyter-client"],
            "install_info": {
                "method": "pip",
                "name": "jupyter-client"
            }
        },
        "ueberzug": {
            "notes": "magma-nvim dependency.",
            "cmd": ["python ", "-m", "ueberzug"],
            "install_info": {
                "method": "pip",
                "name": "ueberzug"
            }
        },
        "pillow": {
            "notes": "magma-nvim dependency.",
            "cmd": ["python ", "-m", "PIL"],
            "install_info": {
                "method": "pip",
                "name": "Pillow"
            }
        },
        "cairosvg": {
            "notes": "magma-nvim dependency.",
            "cmd": ["python ", "-m", "cairosvg"],
            "install_info": {
                "method": "pip",
                "name": "cairosvg"
            }
        },
        "pnglatex": {
            "notes": "magma-nvim dependency.",
            "cmd": ["python ", "-m", "pnglatex"],
            "install_info": {
                "method": "pip",
                "name": "pnglatex"
            }
        },
        "plotly": {
            "notes": "magma-nvim dependency.",
            "cmd": ["python ", "-m", "plotly"],
            "install_info": {
                "method": "pip",
                "name": "plotly"
            }
        },
        "kaleido": {
            "notes": "magma-nvim dependency.",
            "cmd": ["python ", "-m", "kaleido"],
            "install_info": {
                "method": "pip",
                "name": "kaleido"
            }
        },

        "jedi_language_server": {
            "notes": "Python lsp.",
            "cmd": ["jedi-language-server"],
            "install_info": {
                "method": "pip",
                "name": "jedi-language-server"
            }
        },
        "pylsp": {
            "notes": "Python lsp.",
            "cmd": ["pylsp"],
            "install_info": {
                "method": "pip",
                "name": "python-lsp-server"
            }
        },
        "pyright": {
            "notes": "Python lsp.",
            "cmd": ["pyright-langserver", "--stdio"],
            "install_info": {
                "method": "npm",
                "name": "pyright"
            }
        },
        "gopls": {
            "notes": "Go lsp.",
            "cmd": ["gopls"],
            "install_info": {
                "method": "go",
                "name": "golang.org/x/tools/gopls@latest"
            }
        },
        "dockerls": {
            "notes": "Docker lsp.",
            "cmd": ["docker-langserver", "--stdio"],
            "install_info": {
                "method": "npm",
                "name": "dockerfile-language-server-nodejs"
            }
        },
        "jsonls": {
            "notes": "Json lsp.",
            "cmd": ["vscode-json-language-server", "--stdio"],
            "install_info": {
                "method": "npm",
                "name": "vscode-langservers-extracted"
            }
        },
        "sumneko_lua": {
            "notes": "Lua lsp.",
            "cmd": [
                {
                    "with_params": "extension/server/bin/{os_param}/lua-language-server",
                    "os_param": {
                        "windows": "Windows",
                        "linux": "Linux",
                        "mac": "macOS"
                    }
                },
                "-E",
                "extension/server/main.lua"
            ],
            "install_info": {
                "method": "github_releases",
                "name": "sumneko/vscode-lua/lua-"
            }
        },
        "yamlls": {
            "notes": "Yaml lsp.",
            "cmd": ["yaml-language-server", "--stdio"],
            "install_info": {
                "method": "npm",
                "name": "yaml-language-server"
            }
        },

        "flake8": {
            "notes": "Python linter.",
            "cmd": ["flake8"],
            "install_info": {
                "method": "pip",
                "name": "flake8"
            }
        },
        "mypy": {
            "notes": "Python linter.",
            "cmd": ["mypy"],
            "install_info": {
                "method": "pip",
                "name": "mypy"
            }
        },
        "pylint": {
            "notes": "Python linter.",
            "cmd": ["pylint"],
            "install_info": {
                "method": "pip",
                "name": "pylint"
            }
        },
        "staticcheck": {
            "notes": "Go linter.",
            "cmd": ["staticcheck"],
            "install_info": {
                "method": "go",
                "name": "honnef.co/go/tools/cmd/staticcheck@latest"
            }
        },

        "black": {
            "notes": "Python fixer.",
            "cmd": ["black"],
            "install_info": {
                "method": "pip",
                "name": "black"
            }
        },
        "isort": {
            "notes": "Python fixer.",
            "cmd": ["isort"],
            "install_info": {
                "method": "pip",
                "name": "isort"
            }
        },
        "stylua": {
            "notes": "Lua fixer.",
            "cmd": ["stylua"],
            "install_info": {
                "method": "github_releases",
                "name": {
                    "with_params": "JohnnyMorganz/StyLua/{os_param}",
                    "os_param": {
                        "windows": "win64",
                        "linux": "linux",
                        "mac": "macos"
                    }
                }
            }
        }
    },

    "paths": {
        "base": {
            "installables": {
                "with_params": "{os_param}/installables",
                "os_param": {
                    "windows": "{$HOME}/AppData/Local/nvim-data",
                    "linux": "{$HOME}/.local/share/nvim",
                    "mac": "{$HOME}/.local/share/nvim"
                }
            },
            "go": "go",
            "pip": "python",
            "npm": "npm",
            "github_repo": "github_repo",
            "github_releases": "github_releases"
        },
        "bins": {
            "go": "go/bin",
            "pip": "python/bin",
            "npm": "npm/node_modules/.bin",
            "github_repo": "github_repo",
            "github_releases": "github_releases"
        }
    }
}
